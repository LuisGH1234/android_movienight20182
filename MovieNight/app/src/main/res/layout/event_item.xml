<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/eventLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="0dp"
    app:cardCornerRadius="4dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginEnd="@dimen/default_margin">

        <ImageView
            android:id="@+id/iconEventImageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:src="@drawable/pop_corn_two"/>
        
        <TextView
            android:id="@+id/overlineText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="En progreso"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:lastBaselineToBottomHeight="24dp"
            android:textSize="10dp"
            />

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/overlineText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iconEventImageView"
            android:textStyle="bold"
            android:text="@string/mock_text"
            android:textSize="24dp"
            android:lastBaselineToBottomHeight="40dp"
            android:paddingEnd="@dimen/default_margin"/>

        <TextView
            android:id="@+id/locationTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/nameTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iconEventImageView"
            android:text="@string/mock_text"
            android:textSize="14dp"
            android:lastBaselineToBottomHeight="40dp"
            android:paddingEnd="@dimen/default_margin"/>
        
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver"
            app:layout_constraintTop_toBottomOf="@id/locationTextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:theme="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:layout_marginTop="16dp"
            />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>